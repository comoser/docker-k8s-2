{
    "AWSEBDockerrunVersion": 2,
    "family": "1.0.0",
    "containerDefinitions": [
        {
            "name": "client",
            "image": "comoser/docker-k8s-2-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "comoser/docker-k8s-2-api",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "comoser/docker-k8s-2-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "comoser/docker-k8s-2-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server"
            ],
            "memory": 128,
            "dependsOn": [
                {
                    "containerName": "server",
                    "condition": "COMPLETE"
                },
                {
                    "containerName": "client",
                    "condition": "COMPLETE"
                }
            ]
        }
    ]
}